<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.FullNoteFragment">

        <TextView
            android:id="@+id/note_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/notes_default_margin"
            android:textSize="@dimen/text_note_name" />

        <TextView
            android:id="@+id/note_full_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/notes_default_margin"
            android:textSize="@dimen/text_note_text" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>